//mini project 3 - perfect numbers
package video21;

public class Main {

	public static void main(String[] args) {
		int number = 27;
		int remainder;
		int sum = 0;
		
		if (number <= 0) {
			System.out.println("Not a valid number.");
			return;
		}

		for (int i = 1; i < number; i++) {
			remainder = number % i;
			if (remainder == 0) {
				sum += i;
			}
		}

		if (number == sum) {
			System.out.println(number+" is a perfect number.");
		} else {
			System.out.println(number+" is a perfect number.");
		}

	}

}
