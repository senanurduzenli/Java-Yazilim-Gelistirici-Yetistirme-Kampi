package video20;

public class Main {

	public static void main(String[] args) {
		char harf = 'E';
		boolean bulundu = false;
		
		char[] kalin = {'A','I','O','U'};
		char[] ince = {'E','İ','Ö','Ü'};

		
		for (char k : kalin) {
			if (harf==k) {
				System.out.println(harf+" harfi kalın bir harf.");
				bulundu = true;
			}
		}
		for (char i:ince) {
			if(harf==i) {
				System.out.println(harf+" harfi ince bir harf.");
				bulundu = true;
			}
		}
		
		if (bulundu == false) {
			System.out.println("Gecersiz harf");
		}
		
		
	}

}
