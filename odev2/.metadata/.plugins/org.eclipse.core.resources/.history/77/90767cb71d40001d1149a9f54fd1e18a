package video15;

public class Main {

	public static void main(String[] args) {
		//double[] myList = new double[4];
		double[] myList = {1.2, 9.5, 2.5, 7.5};
		
		double sum = 0;
		double max = myList[0];
		
		
		for (double number:myList){
			sum = sum + number;
			if(max<number) {
				max = number;
			}
		}
		System.out.println("Sum = " + sum);
		System.out.println("Max = "+ max);
		
		
	}

}
